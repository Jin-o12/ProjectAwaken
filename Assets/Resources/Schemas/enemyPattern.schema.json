{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EnemyAttackPatternWithCards",
  "type": "object",
  "properties": {
    "turns": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_-]+$": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "cardId": {
                "type": "string",
                "minLength": 1,
                "description": "사용할 카드의 고유 ID"
              },
              "params": {
                "type": "object",
                "description": "카드 실행시 필요한 파라미터 (optional)"
              }
            },
            "required": ["cardId"],
            "additionalProperties": false
          }
        }
      },
      "minProperties": 1,
      "additionalProperties": false
    },
    "transitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "condition": { "type": "string" }
        },
        "required": ["from", "to", "condition"],
        "additionalProperties": false
      }
    }
  },
  "required": ["turns"],
  "additionalProperties": false
}
